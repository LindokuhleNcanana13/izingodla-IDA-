@model IDA.Models.Feedback

@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Feedback</title>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/Content/sweetalert/sweet-alert.css" rel="stylesheet" />
    <link rel="stylesheet" href="	https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="/Content/css/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="/Content/css/style.min.css" rel="stylesheet">
    <link href="~/Content/css/links.css" rel="stylesheet" />
   
</head>
<body>
 

    <div class="jumbotron" style="margin-bottom: 0px;height: 100vh;">


        <div id="login-row" class="row justify-content-center align-items-center">

            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <div class="card" style=" margin-top:110px;">
                        <div class="card-title" style="text-align:center; background-color: #2295c9;">
                            <h4 style="color:whitesmoke">Please let us know why you won't be available!</h4>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("Feedback", "Employees", FormMethod.Post))
                            {
                                <h5 style="text-align:center; color:#013970; "></h5>


                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                        @Html.EditorFor(model => model.MeetingId, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Enter meeting ID", @required = true } })
                                        @Html.ValidationMessageFor(model => model.MeetingId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "Email", @placeholder = "Enter your email", @required = true } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                        @Html.TextAreaFor(model => model.Reason, 3, 80, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Enter your feedback", @required = true } })
                                        @Html.ValidationMessageFor(model => model.Reason, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                                <input type="submit" value="Submit" class="btn btn-info btn-md" style="width:100%" />


                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (ViewBag.Message != null && ViewBag.Message.Equals("Feedback Message Submitted"))
        {
            <div class="alert alert-success" style="text-align:center; margin-top:70px">
                <a class="close" data-dismiss="alert" href="#">×</a>
                @ViewBag.Message
            </div>
        }
    </div>


</body>
</html>
<footer style="        position: fixed;
        left: 0;
        bottom: 0;
        width: 100%;
        background-color: #2cadd1;
        height: 50px;
    ">
    <p>&copy; @DateTime.Now.Year - Powered by <a href=" http://www.izingcweti.co.za" style="color:orangered">IDAS</a></p>
</footer>
