
@{
    ViewBag.Title = "AdminProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>DashBoard</title>
</head>
<body>
    <main class="pt-5 mx-lg-5">
        <div class="container-fluid mt-5">

            <!-- Heading -->
         
            <!-- Heading -->
            <!--Grid row-->
            <div class="row wow fadeIn">

                <!--Grid column-->
                <div class="col-md-12 mb-4">

                    <!--Card-->
                    <div class="card">

                        <!--Card content-->
                        <div class="card-body">
                            @Session["Name"] 
                            @Session["Surname"]
                            @Session["Email"]
                            @Session["Address"] 
                            @Session["Position"] 
                            @Session["PhoneNo"] 
                            @Session["IDNumber"] 
                            <canvas id="myChart"></canvas>

                            <div class="card" style="width: 15rem; float:right; border-top-right-radius:140px; border-top-left-radius:140px">

                                <img class="card-img-top" src="~/Content/images/Mlindo.jpg" alt="Card image cap" style="border-radius:140px" />

                                <div class="card-body">
                                    <h5 class="card-title" style="text-align:center; color: orangered">Lindo</h5>
                                    <p class="card-text" style="text-align:center; color: orangered;">Izingodla CEO </p>
                                    <a href="#" class="btn btn-primary" style="margin-left:20px;"> <i class="fa fa-pencil m-1"></i>Edit Photo</a>
                                </div>
                            </div>
                        </div>


                    </div>
                    <!--/.Card-->

                </div>
                <!--Grid column-->


            </div>
        </div>
    </main>

</body>
</html>
