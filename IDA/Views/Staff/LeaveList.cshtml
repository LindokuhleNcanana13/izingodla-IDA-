                                        @Html.DisplayFor(modelItem => item.FeedMessage)
                                    </td>

                                </tr>
                            }
                            if (item.Status.Equals("Approved"))
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApplicantName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AppDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Duration)
                                    </td>
                                    <td class="success-color">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateApproved)
                                    </td>


                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReasonForApplying)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fromdate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ToDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoOfDays)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.FeedMessage)
                                    </td>
                                </tr>
                            }
                            if (item.Status.Equals("Declined"))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApplicantName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AppDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Duration)
                                    </td>
                                    <td class="danger-color">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateApproved)
                                    </td>


                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReasonForApplying)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fromdate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ToDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoOfDays)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.FeedMessage)
                                    </td>
                                </tr>
                            }
                        }
                    }


