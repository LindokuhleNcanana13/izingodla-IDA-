        <table class="table table-bordered table-striped" id="dt-filter-select">
            <thead>
                <tr class="table-info">
                    <th>Task</th>
                    <th>Assigned To</th>
                    <th>Task Level</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Rows)
                {
                    if (row["Stage"].Equals(1))
                    {
                        <tr>
                            <td>
                                @row["SubName"]
                            </td>
                            <td>
                                @row["Name"]  @row["Surname"]
                            </td>
                            <td>To Do</td>
                            <td>
                                <a class="btn btn-default" href="@Url.Action("EditTaskStatus","Staff", new { id = row["AssignmentId"]})"><i class="fa fa-pencil"></i></a>
                            </td>

                        </tr>
                    }
                    if (row["Stage"].Equals(2))
                    {
                        <tr>
                            <td>
                                @row["SubName"]
                            </td>
                            <td>
                                @row["Name"]  @row["Surname"]
                            </td>
                            <td>In-Progress</td>
                            <td>
                                <a class="btn btn-default" href="@Url.Action("EditTaskStatus","Staff", new { id = row["AssignmentId"]})"><i class="fa fa-pencil"></i></a>
                            </td>

                        </tr>
                    }
                    if (row["Stage"].Equals(3))
                    {
                        <tr>
                            <td>
                                @row["SubName"]
                            </td>
                            <td>
                                @row["Name"]  @row["Surname"]
                            </td>
                            <td>Awaiting</td>
                            <td>
                                <a class="btn btn-default" href="@Url.Action("EditTaskStatus","Staff", new { id = row["AssignmentId"]})"><i class="fa fa-pencil"></i></a>
                            </td>
                        </tr>
                    }
                    if (row["Stage"].Equals(4))
                    {
                        <tr>
                            <td>
                                @row["SubName"]
                            </td>
                            <td>
                                @row["Name"]  @row["Surname"]
                            </td>
                            <td>Completed</td>
                            <td>
                                <a class="btn btn-default" href="@Url.Action("EditTaskStatus","Staff", new { id = row["AssignmentId"]})"><i class="fa fa-pencil"></i></a>
                            </td>

                        </tr>
                    }

                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        SubName
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
            </tfoot>
        </table>

