            var Pro = $("#CloseUp").val();
            var Pro = $("#AmountRecieved").val();
            var data = $("#AddReport").serialize();
            $.ajax({
                type: "post",
                data: data,
                url: "/Finance/NewInepReport",
                success: function (result) {
                    alert(result);
                }
            });
        }
    </script>
</main>


