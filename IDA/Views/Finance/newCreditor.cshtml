@model IDA.Models.Creditor

@{
    ViewBag.Title = "newCreditor";
    Layout = "~/Views/Shared/FinanceManagerLayout.cshtml";
}
<br />
<br />
<br />
<link href="~/Content/sweetalert/sweet-alert.css" rel="stylesheet" />
<link rel="stylesheet" href="	https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.min.js"></script>
<main class="pt-5 mx-lg-5">
    <div class="card mb-4 wow fadein">
        <div class="card-body d-sm-flex justify-content-between">

            <h4 class="mb-2 mb-sm-0 pt-1">

                <span style=" color: orangered;">New Creditors</span>
            </h4>

            <a class="btn btn-primary" href="/Finance/debtorsandcreditors" style="border-radius:10px">
                <i class="fa fa-arrow-left mr-2"></i>Back
            </a>
        </div>
    </div>
    @if (TempData["Success"] != null && TempData["Success"].Equals("Success"))
    {
        <script type="text/javascript">

            $(document).ready(function () {

                swal({
                    title: "",
                    text: "Added Successfully",
                    type: "success",
                    confirmButtonClass: "btn-info",
                    showOkButton: false,
                    //confirmButtonText: 'OK',
                    timer: 2000
                },

                );

            });

        </script>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Creditor</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.CreditorName, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
            @Html.ValidationMessageFor(model => model.CreditorName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Description</label> <div class="col-md-10">
            @Html.TextAreaFor(model => model.CreditDescription, 3, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;", required = "true" })
            @Html.ValidationMessageFor(model => model.CreditDescription, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", @required = "true",@Type= "number"} })
            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
        </div>
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.DateRecorded, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateRecorded, new { htmlAttributes = new { @class = "form-control" @type = "datetime"} })
                @Html.ValidationMessageFor(model => model.DateRecorded, "", new { @class = "text-danger" })
            </div>
        </div>*@
    @Html.HiddenFor(model => model.DateRecorded)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
            <a class="btn btn-primary" href="/Finance/debtorsandcreditors">Back</a>
        </div>
    </div>
</div>
    }


</main>