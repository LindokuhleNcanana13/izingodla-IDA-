                                                <div>SIGNITURE:____________________________</div>

                                            </div>


                                        </div>
                                        <!--DO NOT DELETE THIS div. IT is responsible for showing footer always at the bottom-->
                                        <div></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <script>

                            $('#printInvoice').click(function () {
                                Popup($('.invoice')[0].outerHTML);
                                function Popup(data) {
                                    window.print();
                                    return true;
                                }
                            });</script>
                    </div>
                    <!--/.Card-->

                </div>
                <!--Grid column-->
            </div>
        </div>

