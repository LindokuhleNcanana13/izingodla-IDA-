                                                            <tr>

                                                                <td class="text-left">
                                                                    <h3>
                                                                        <a target="_blank" href="#">

                                                                            @row["AmountRecieved"]

                                                                        </a>
                                                                    </h3>

                                                                </td>


                                                                <td class="text-left"> @ViewBag.TotalTran</td>
                                                                <td class="text-left"> @ViewBag.Percentage %</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                    <tfoot>


                                                    </tfoot>
                                                </table>
                                            </div>
                                            <h5 style="text-align:center" class="invoice-id">Year To Date</h5>

                                            <div class="col-xs-6">
                                                <table border="0" cellspacing="0" cellpadding="0">
                                                    <thead>
                                                        <tr>

                                                            <th class="text-left"><b>Transfered Capital</b></th>
                                                            <th class="text-left"><b>Actual Capital Expenditure</b></th>
                                                            <th class="text-left"><b>Variance %</b></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (DataRow row in Model.Rows)
                                                        {

                                                            <tr>

                                                                <td class="text-left">
                                                                    <h3>
                                                                        <a target="_blank" href="#">

                                                                            @row["AmountRecieved"]

                                                                        </a>
                                                                    </h3>

                                                                </td>


                                                                <td class="text-left"> @ViewBag.TotalTran</td>
                                                                <td class="text-left"> @ViewBag.Percentage %</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                    <tfoot>


                                                    </tfoot>
                                                </table>
                                            </div>
                                            <h5 style="text-align:center" class="invoice-id">Variance Explaination</h5>
                                            <table border="0" cellspacing="0" cellpadding="0">
                                                <thead>
                                                    <tr>

