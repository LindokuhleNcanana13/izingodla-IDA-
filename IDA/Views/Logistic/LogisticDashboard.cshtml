
@{
    ViewBag.Title = "LogisticDashboard";
    Layout = "~/Views/Shared/LogisticManagerLayout.cshtml";
}


<html>
<head>
    <title>DashBoard</title>
</head>
<body>
    <main class="pt-5 mx-lg-5">

        <div class="container-fluid mt-5">

            <!-- Heading -->
            <div class="card mb-4 wow fadeIn">

                <!--Card content-->
                <div class="card-body d-sm-flex justify-content-between">

                    <h4 class="mb-2 mb-sm-0 pt-1">

                        <span style=" color: orangered;">Logistic Dashboard</span>
                    </h4>


                    <p style="font:italic">Welcome @Session["Name"]  @Session["Surname"]</p>
                </div>

            </div>


            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title" style="text-align:center">Vehicles</h5>
                            <hr />
                           <img src="~/Content/images/truck_delivery-128.png" style="margin-left:90px" />
                            <a href="/Logistic/getVehicles" class="btn btn-primary" style="margin-left:50px;border-radius:5px;">Manage Vehicles</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title" style="text-align:center">Bookings</h5>
                            <hr />

                            <img src="~/Content/images/booking-111.png" style="margin-left:100px"/>
                            @*<img src="~/Content/images/booking-dark (1).jpg"  />*@
                            <a href="/Logistic/manageLogistics" class="btn btn-primary" style="margin-left:60px;border-radius:5px;">Manage Bookings</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title" style="text-align:center">Transactions</h5>
                            <hr />
                            <img src="~/Content/images/Untitled-1-08-128.png"  style="margin-left:90px"/>
                    
                            <a href="/Logistic/transactions" class="btn btn-primary" style="margin-left:60px;border-radius:5px;">Manage Transactions</a>
                        </div>
                    </div>
                </div>
            </div>
            <br />



        </div>
        @*@Session["Name"]
            @Session["Surname"]
            @Session["Email"]
            @Session["Address"]
            @Session["Position"]*@
    </main>

</body>
</html>


